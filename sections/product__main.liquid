</section>

<script>
  $(document).ready(function(e) {
    var sold_count_lifesales = {{product.metafields.lifeSales.lifeSales}};
    internationalNumberFormat = new Intl.NumberFormat('en-US');
    $(".sold-count-lifesales").each(function(){
      $(this).html(internationalNumberFormat.format(sold_count_lifesales));
    });


    var signedup = localStorage.getItem('signedup');
    $(".successful-signup").css("display","none");
    const queryString = window.location.search;

    const urlParams = new URLSearchParams(queryString);

    var customer_posted = urlParams.get('customer_posted')

    if(customer_posted != null && (customer_posted === true) || (customer_posted === "true")){
      $("#signup_text").html("15% off your first purchase with code <span class='link-color'>VIP15</span>");
      $("#modal-body-heading").html("ALL SET");
      $("#modal-body-heading").removeClass("has-margin-bottom");
      $("#modal-body-text").html("Welcome aboard the pleasure ride. Enjoy<br/>15% off your first purchase with code<br/><span class='link-color is-font-weight-bold'>VIP15</span>");
      $("#modal-body-form").html("");
      $("#myModal").css("display", "block");
      $(".successful-signup").css("display","inline-block");
    }

    if(signedup){
      $(".signup_text").each(function(){
      	$(this).html("15% off your first purchase with code <span class='link-color'>VIP15</span>");
      });
    }
    var currentdate = new Date();
    var weekday = new Array(7);
    weekday[0] = "Sun";
    weekday[1] = "Mon";
    weekday[2] = "Tue";
    weekday[3] = "Wed";
    weekday[4] = "Thu";
    weekday[5] = "Fri";
    weekday[6] = "Sat";

    const monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
                        "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
                      ];
    var day = currentdate.getDay(), condition, display_message;
    if(day >= 0 && day <= 3){
      condition = 1;
    }else if(day == 4) {
      var hours = currentdate.getHours();
      if(hours < 12){
       	 condition = 1;
      }else{
        condition = 2;
      }
    }else {
      condition = 2;
    }


    Date.prototype.addDays = function(days) {
      var date = new Date(this.valueOf());
      date.setDate(date.getDate() + days);
      return date;
    }

    var start_date = new Date();
    var end_date = new Date();
    if(condition == 1){
      start_date = start_date.addDays(2);
      end_date = end_date.addDays(4);
    } else {
      start_date = start_date.addDays(3);
      end_date = end_date.addDays(5);
    }
    display_message = "<strong>" + weekday[start_date.getDay()] + ", " + monthNames[start_date.getMonth()] + " " + start_date.getDate() + "</strong> and <strong>" + weekday[end_date.getDay()] + ", " + monthNames[end_date.getMonth()] + " " + end_date.getDate() + "</strong>";
    $(".shipping-approx").each(function(){
     $(this).html(display_message);
    });

    waitForElement(".question-form-wrapper",function(){
      $("#stamped-sort-select").css({"min-width": "100% !important"});
      if($("#stamped-questions-tab").html() == ""){
        $("#product__custom-qa--content-qas-content").html("<div id='question-form' style='display:none'>" + $(".question-form-wrapper").html() + "</div><p class='most-recent-qa is-hidden-mobile-only'>Most recent questions</p><div class='recent-qa'>No questions yet...</div>");
      }else {
        $("#product__custom-qa--content-qas-content").html("<div id='question-form' style='display:none'>" + $(".question-form-wrapper").html() + "</div><p class='most-recent-qa is-hidden-mobile-only'>Most recent questions</p><div class='recent-qa'>" + $("#stamped-questions-tab").html() + "</div>");
      }
      $(".question-form-wrapper").remove();
      $(".spr-form-title").remove();
      $(".stamped-review-avatar").remove();
      $(".stamped-icon-comment").remove();
      $(".stamped-reply-q").each(function(){
        $(this).attr("style","");
      });
      $(".stamped-reply-a").each(function(){
        $(this).attr("style","");
      });
      var numItems = $('.recent-qa .stamped-review').length;
	  $(".question-occurance").html("(" + numItems + ")");

      $(".spr-form-input").each(function(){
        $(this).attr("placeholder","");
      });
      if($("#new-question-form .stamped-button").val() === "Submit Question"){
        $("#new-question-form .stamped-button").val("Submit");
      }
      let author, author_date, reply_author, reply_author_date;
      $(".recent-qa .stamped-review").each(function(){
        author = $(this).children().eq(0).children().eq(0).children().eq(0).html();
        author_date = $(this).children().eq(0).children().eq(0).children().eq(1).html();
        $(this).children().eq(1).html($(this).children().eq(1).html()
                                     + "<p class='author-desc'>Asked on " + author_date + " by " + author + "</p>");
        $(this).children().eq(0).remove();
        $(".stamped-review-reply-body").addClass(" is-flex ");
        $(".stamped-review-content-body").addClass(" is-flex ");

        reply_author = $.trim( $(this).children().eq(1).children().eq(0).html().replace(/\<span(.*)\<\/span\>/gi, function(stmt, value){return "" }) );
        reply_author_date = $(this).children().eq(1).children().eq(0).children().eq(0).html();

        $(this).children().eq(1).children().eq(1).html($(this).children().eq(1).children().eq(1).html()
                                                       + "<p class='author-desc'>Asked on " + reply_author_date + " by " + reply_author + "</p>");


      });
	});
    waitForElement(".new-review-form",function(){
        $(".stamped-form-input").each(function(){
			$(this).attr("placeholder","");
        });
	});
    $(".ask-a-question-link").click(function() {
      if ($("#question-form").css("display") === "none") {
        $("#question-form").css("display","block");
        $("#new-question-form").css("display","block");
         $('html, body').animate({
            scrollTop: $("#question-form").offset().top-200
        }, 2000);
      } else {
        $("#question-form").css("display","none");
        $("#new-question-form").css("display","none");
      }
    });


    $(".custom-reviews-summary-overview").html($(".summary-overview").html());
