  <div class="product__custom-qa--head is-flex is-justify-space-between">
    <p class="product__custom-qa--heading">Questions &amp; answers <span class='question-occurance'>(0)</span></p>
    <button type="button" name="ask-a-question" class="button ask-a-question ask-a-question-link" data-label="Ask a question" style="cursor: pointer;" tabindex="0" > <span class="text">Ask a question</span></button>
  </div>
  <div class="product__custom-qa--content is-flex is-flex-column--tablet">
    <div id="product__custom-qa--content-sort" class="is-flex is-justify-start">
      <p class="product__custom-qa--content-sort-content round-border is-flex is-align-center">{% render 'icon', name: 'search' %}</p>
      <p class="product__custom-qa--content-sort-content is-flex is-align-center">
      	<select>
          <option>Sort</option>
          <option>Most recent</option>
          <option>A to Z</option>
          <option>Z to A</option>
